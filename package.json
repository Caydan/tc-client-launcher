{
  "name": "tc-launcher",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "ng build --aot --base-href .",
    "build-electron": "tsc -p src/electron --outDir dist/ && cp src/electron/package.json dist/",
    "build-native": "electron-rebuild -f && cp build/Release/tc_launcher.node dist/",
    "build-all-dev": "npm run build && npm run build-electron && npm run build-native",
    "electron": "electron --remote-debugging-port=9222 dist/main.js",
    "install-electron-deps": "pushd dist && npm install && popd",
    "build-package:win": "ng build --aot --prod --base-href . && npm run build-native && npm run build-electron && npm run install-electron-deps && electron-packager dist trinitycore-launcher --asar --out=bin --overwrite --icon=src/assets/icon.ico --win32metadata.CompanyName=Shauren --win32metadata.ProductName=\"TrinityCore Client Launcher\""
  },
  "gypfile": true,
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.4.2",
    "@angular/common": "^4.4.2",
    "@angular/compiler": "^4.4.2",
    "@angular/core": "^4.4.2",
    "@angular/forms": "^4.4.2",
    "@angular/http": "^4.4.2",
    "@angular/platform-browser": "^4.4.2",
    "@angular/platform-browser-dynamic": "^4.4.2",
    "@angular/router": "^4.4.2",
    "command-line-args": "^4.0.7",
    "core-js": "^2.4.1",
    "electron-settings": "^3.1.1",
    "ngx-electron": "^1.0.3",
    "rxjs": "^5.4.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.4.2",
    "@angular/compiler-cli": "^4.4.2",
    "@angular/language-service": "^4.4.2",
    "@types/command-line-args": "^4.0.1",
    "@types/electron-settings": "^3.0.0",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.1.1",
    "electron": "^1.7.6",
    "electron-packager": "^9.1.0",
    "electron-rebuild": "^1.6.0",
    "ts-node": "~3.2.0",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3"
  }
}
